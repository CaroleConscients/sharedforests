<div class="container">
  <h1>Plant a tree</h1>

  <div class="container-form">
    <%= form_for @certificate, html: { class: 'form-horizontal' } do |f| %>

      <div class="form-group">
        <label for="" class="control-label col-sm-3">Nombre d'arbres</label>
        <div class="col-sm-9">
          <%= f.text_field :trees_quantity, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label for="" class="control-label col-sm-3">Destinataire </label>
        <div class="col-sm-9">
          <%= f.text_field :name, class: "form-control"%>
          <!-- AVEC PLACEHOLDER -->
          <%#= f.text_field :name, placeholder: "Prénom et nom de la personne à qui vous offrez l'arbre", class: "form-control"%>
        </div>
      </div>

          <!-- EMAIL USER 2 -->
<!-- <div class="form-group">
        <label for="" class="control-label col-sm-3">Email du destinataire </label>
        <div class="col-sm-9">
          <%#= f.text_field :email, placeholder: "Email de la personne à qui vous offrez l'arbre", class: "form-control"%> email_field("user", "address")
        </div>
      </div> -->

      <div class="form-group">
        <label for="" class="control-label col-sm-3">A quelle occasion ?</label>
        <div class="col-sm-9">
          <%= f.select :occasion, Occasions: Certificate::OCCASIONS %>
        </div>
      </div>

      <div class="form-group">
        <label for="" class="control-label col-sm-3">Date du cadeau</label>
        <div class="col-sm-9">
          <%= f.text_field :date, as: :date, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <label for="" class="control-label col-sm-3">Message</label>
        <div class="col-sm-9">
          <%= text_field_tag 'certificate_message', nil, maxlength: 60, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <%#= f.submit 'Valider', class: "btn btn-transparent pull-right", id:"submit-carole"%>
          <%= f.submit 'Valider', class: "btn btn-transparent pull-right"%>
        </div>
      </div>
    <% end %>
  </div>
</div>


