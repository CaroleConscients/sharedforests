<% if flash[:alert] %>
  $('.container').prepend('<%= j render "shared/flashes" %>');
<% else %>
  $("#certificate-tree-quantity-content").
    html("<%= j render 'certificate_customize_trees_quantity' %>");
  $(".certificate-attribution-name").
    html("<%= j render 'certificate_customize_name' %>");
  $(".certificate-date-choosen").
    html("<%= j render 'certificate_customize_date' %>");
  $(".certificate-attribution-message").
    html("<%= j render 'certificate_customize_message' %>");
  $('.popover').popover('hide');
  $('[data-toggle="popover"').popover({html: true});
<% end %>

$(document).ready(function() {
  $('#modify-certificate-date').click(function() {
    $('.datepicker').datepicker({
      format: 'dd/mm/yyyy',
      weekStart: 1,
      language: 'fr'
    });
  });
});

