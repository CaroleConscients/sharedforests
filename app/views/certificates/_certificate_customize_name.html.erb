<%= @certificate.name.upcase %>
<i class="fa fa-plus-circle" id="modify-certificate-name"
  data-toggle="popover"
  title="Changez le nom du destinataire"
  data-container=".certificate-attribution-perso"
  date-content='<%= simple_form_for @certificate, remote: true do |f| %>
    <%= f.input :name %>
    <%= f.submit value: "ok" %>
  <% end %>'></i>



