<%= @certificate.message %>
<i class="fa fa-plus-circle" id="modify-certificate-name"
  data-toggle="popover"
  title="Modifier le message"
  data-container=".certificate-layout"
  data-content='<%= simple_form_for @certificate, remote: true do |f| %>
    <%= f.input :message %>
    <%= f.button :submit, value: "ok", class: "certificate-submit-btn", data: {disable_with: "ok"} %>
  <% end %>'></i>
