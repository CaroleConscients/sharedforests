<% content_for :meta_title, "#Bienvenu dans la forêt de {@certificate.name} !" %>
<% content_for :meta_description, "#Un message pour {@certificate.name} : {@certificate.message}." %>
<% content_for :meta_image, "pp-fleuve-plant.png" %>



<div id="weather" style="text-align: center">
  <h2>The weather right now is <%= @weather_description %></h2>
  <h2>The temperature is currently <%= @weather_temp.round(1) %>°, humidity is now at <%= @weather_humidity %>% </h2>
  <h2></h2>
  <h2>The farmer is <%= @farmer %></h2>
</div>

<embed src="<%= certificate_url(@certificate, format: :pdf) %>" width="100%" height="375" type='application/pdf'>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>

  <script>
    $(document).ready(function() {
      var myLatlng = new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>);
      var mapOptions = {
        zoom: 10,
        mapTypeId: google.maps.MapTypeId.HYBRID,
        center: myLatlng,
        tilt: 45
      };
      var map = new google.maps.Map(document.getElementById("map"),
      mapOptions);
      var marker = new google.maps.Marker({
        position: myLatlng,
        icon: { url: "<%= image_path(@icon) %>", width: 36, height: 36 },
        map: map,
        infowindow: "<p>test</p>"
      });
    });
  </script>
<% end %>
