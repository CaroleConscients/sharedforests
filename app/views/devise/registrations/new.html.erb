<!-- SIGN UP -->
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Je m'inscris sur SharedForests !</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, label: "Mon email", required: true, autofocus: true %>
        <%= f.input :password, label: "mon mot de passe", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "confirmation de mon mot de passe", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, value: "Je m'inscris !" %>
      </div>
    <% end %>

    <div class="class btn btn-green-sign">
    <%= render "devise/shared/links" %>
    </div>
    </div>
    <div class="col-sm-6">
      <h2>Projet</h2>
    </div>
  </div>
</div>
