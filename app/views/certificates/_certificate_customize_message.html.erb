<%= @certificate.message %>
<i class="fa fa-plus-circle" id="modify-certificate-name"
  data-toggle="popover"
  title="Changez le message"
  data-container=".certificate-layout"
  data-content='<%= simple_form_for @certificate, remote: true do |f| %>
    <%= f.input :message %>
    <%= f.submit value: "ok" %>
  <% end %>'></i>
